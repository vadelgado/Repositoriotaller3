@model MVC.Models.Persona
@{
    Layout = null;
}

<div class="row container-fluid" style="background-color:white; border-radius:5px">
    <h4 class="alinearCentro">Eliminar Registro</h4>
    <br />
    @using (Html.BeginForm("EliminarRegistro", "Usuario", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <label> ¿Seguro desea eliminar este usuario?</label>
        <div class="row">
            <div class="col-md-10 ">
                <label>Usuario: @Html.DisplayFor(model => model.PrimerNombre) @Html.DisplayFor(model => model.PrimerApellido) </label>
                @Html.HiddenFor(model => model.Id_usuario)
            </div>                    
        </div>
        <div class="row">
            <div class="text-right col-md-12">
                <a href="/Usuario" class="btn btn-primary" id="n"><i class="glyphicon glyphicon-remove-sign"></i>&nbsp;Cancelar</a>
                <button class=" btn botonRegresar"><i class="glyphicon glyphicon-trash"></i>&nbsp;Eliminar</button>
            </div>
        </div>
    }
    <br />
</div>